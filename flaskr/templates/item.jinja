{%extends "home.jinja"%}
{%block title%}Item{%endblock%}
{%block content%}
<div class="nes-table-responsive">
    <div class="container" >
        <div class="title-btn-group">
            <h1 class="page-title">Item</h1>
        </div>
    </div>            
    <table class="table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Stock</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        {%for item in items%}
        <tr style="text-align: center;">
            <td>{{item.id}}</td>
            <td>{{item.name}}</td>
            <td>{{item.type}}</td>
            <td>{{item.stock}}</td>
            <td>{{item.unit_price}}</td>
        </tr>
        {%endfor%}
    </tbody>
    </table>
</div>
{%endblock%}